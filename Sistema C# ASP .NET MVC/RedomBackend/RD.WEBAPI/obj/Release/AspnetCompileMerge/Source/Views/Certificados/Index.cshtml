@model IEnumerable<RD.Data.Models.CertificadoDeRegalo>

@{
    ViewBag.Title = "Certificados";
}

<div class="wrapper">

    @Html.Partial("~/Views/Shared/_Header.cshtml")

    @*Import Sidebar Left*@
    @Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
    <div class="wrapper">
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Sistema de gestión
                    <small>Certificados</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-newspaper-o"></i> Home</a></li>
                    <li><a href="#">Certificados</a></li>
                </ol>
            </section>
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Certificados de regalos</h3>
                                <hr />
                            </div><!-- /.box-header -->
                            <div class="box-body">

                                <p>
                                    @Html.ActionLink("Crear Nuevo", "Create")
                                </p>
                                <table class="datatableUI table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Nombre)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Tipo)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Cantidad)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Descuento)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Status)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Nombre)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Tipo)
                                                </td>

                                                @{
                                            if (item.Tipo == "ACOMPANANTE" || item.Tipo == "NOCHE")
                                            {
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Cantidad)
                                                </td>
                                                    <td>
                                                        N/A
                                                    </td>
                                            }

                                            if (item.Tipo == "PORCENTAJE")
                                            {
                                                <td>
                                                    N/A
                                                </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Descuento) %
                                                    </td>

                                            }
                                                }
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Status)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Editar", "Edit", new { id = item.CertificadoDeRegaloID }) |
                                                    @Html.ActionLink("Detalles", "Details", new { id = item.CertificadoDeRegaloID }) |
                                                    @Html.ActionLink("Borrar", "Delete", new { id = item.CertificadoDeRegaloID })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div>
</div>

@*Import Sidebar Right*@
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")