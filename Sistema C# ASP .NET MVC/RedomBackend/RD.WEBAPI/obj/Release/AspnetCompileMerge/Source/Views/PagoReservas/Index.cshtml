@model IEnumerable<RD.Data.Models.PagosReserva>

@{
    ViewBag.Title = "Pagos";
}

<div class="wrapper">

    @Html.Partial("~/Views/Shared/_Header.cshtml")

    @*Import Sidebar Left*@
    @Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
    <div class="wrapper">
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Sistema de gestión
                    <small>Pagos de reserva</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-newspaper-o"></i> Home</a></li>
                    <li><a href="#">Pagos de reserva</a></li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Pagos de Reservas</h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Id de Pago</th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Monto)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FechaHora)
                                            </th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PagoReservaID)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Monto)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FechaHora)
                                                </td>
                                                
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            <br />
                            @Html.ActionLink("Volver al listado","ReservasUsuario","Reservas",new{id=ViewBag.Afiliado},null)
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div>
</div>


@*Import Sidebar Right*@
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")