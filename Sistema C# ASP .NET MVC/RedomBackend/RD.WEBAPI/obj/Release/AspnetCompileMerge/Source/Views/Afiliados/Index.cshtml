@model IEnumerable<RD.Data.Models.Afiliado>

@{
    ViewBag.Title = "Afiliados";
}

<div class="wrapper">

    @Html.Partial("~/Views/Shared/_Header.cshtml")

    @*Import Sidebar Left*@
    @Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
    <div class="wrapper">
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Sistema de gestión
                    <small>Afiliados</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-newspaper-o"></i> Home</a></li>
                    <li><a href="#">Afiliados</a></li>
                </ol>
            </section>
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Afiliados Registrados</h3>
                                <hr />
                            </div><!-- /.box-header -->
                            <div class="box-body">

                                <p>
                                    @Html.ActionLink("Crear Nuevo", "Create")
                                </p>
                                <table class="datatableUI table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                ID Afiliado
                                            </th>
                                            <th>
                                                Cédula
                                            </th>
                                            <th>
                                                Nombre
                                            </th>
                                            <th>
                                                Razón Social
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.RNC)
                                            </th>
                                            
                                            <th>
                                                Estatus
                                            </th>

                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @{var i = item.AfiliadoIndice.ToString();
                                                        while(i.Length < 8)
                                                        {
                                                            i = "0" + i;
                                                        }
                                                        if (i.Length > 4)
                                                        {
                                                            @Html.Raw("7777-2552-" + i.Substring(1, 4) + "-" + i.Substring(4, 4))
                                                        }
                                                        else
                                                        {
                                                            @Html.DisplayFor(modelItem => item.AfiliadoIndice)
                                                        }

                                                    }
                                                </td>



                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Cedula)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Nombres) @Html.DisplayFor(modelItem => item.Apellido1) @Html.DisplayFor(modelItem => item.Apellido2)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.RazonSocial)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.RNC)
                                                </td>
                                               
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Status)
                                                </td>

                                                <td>
                                                    @Html.ActionLink("Editar", "Edit", new { id = item.AfiliadoID }) |
                                                    @Html.ActionLink("Detalles", "Details", new { id = item.AfiliadoID }) |
                                                    @if (ViewBag.Ex == true)
                                                    {
                                                        @Html.ActionLink("Detalles +", "DetailsEx", new { id = item.AfiliadoID }) @Html.Raw(" | ")
                                                    }
                                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.AfiliadoID })
                                                    
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div>
</div>


@*Import Sidebar Right*@
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")