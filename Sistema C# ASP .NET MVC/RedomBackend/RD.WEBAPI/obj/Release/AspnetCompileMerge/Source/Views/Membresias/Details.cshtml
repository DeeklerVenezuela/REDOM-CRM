@model RD.Data.Models.Membresia

@{
    ViewBag.Title = "Membresia";
}

<div class="wrapper">

    @Html.Partial("~/Views/Shared/_Header.cshtml")

    @*Import Sidebar Left*@
    @Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
    <div class="wrapper">
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Sistema de gestión
                    <small>Membresias</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-newspaper-o"></i> Home</a></li>
                    <li><a href="#">Membresias</a></li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Datos de configuración de membresias</h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">

                                <div>
                                    
                                    <dl class="dl-horizontal">
                                        <dt>
                                            @Html.DisplayNameFor(model => model.Nombre)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Nombre)
                                        </dd>
                                        
                                        <dt>
                                            @Html.DisplayNameFor(model => model.Costo)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Costo)
                                        </dd>

                                        <dt>
                                            Duración (meses)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Duracion)
                                        </dd>

                                        <dt>
                                            Fecha de creación
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.FechaCreacion)
                                        </dd>

                                    </dl>
                                </div>
                                <p>
                                    @Html.ActionLink("Editar", "Edit", new { id = Model.MembresiaID }) |
                                    @Html.ActionLink("Volver al listado", "Index")
                                </p>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div>
</div>


@*Import Sidebar Right*@
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")