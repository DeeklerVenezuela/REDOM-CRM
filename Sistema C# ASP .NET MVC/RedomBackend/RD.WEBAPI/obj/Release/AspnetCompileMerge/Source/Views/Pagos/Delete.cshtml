@model RD.Data.Models.Pago

@{
    ViewBag.Title = "Pagos";
}

<div class="wrapper">

    @Html.Partial("~/Views/Shared/_Header.cshtml")

    @*Import Sidebar Left*@
    @Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
    <div class="wrapper">
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Sistema de gestión
                    <small>Pagos</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-newspaper-o"></i> Home</a></li>
                    <li><a href="#">Pagos</a></li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Pagos de Afiliados</h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">

                                <h3>Estás seguro de eliminar este ítem?</h3>
                                <div>
                                    <dl class="dl-horizontal">
                                        <dt>
                                            @Html.DisplayNameFor(model => model.FechaHora)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.FechaHora)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.CostoMembresia)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.CostoMembresia)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.MontoPago)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.MontoPago)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Comentario)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Comentario)
                                        </dd>

                                    </dl>

                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-actions no-color">
                                            <input type="submit" value="Delete" class="btn btn-default" /> |
                                            @Html.ActionLink("Volver al listado", "Index")
                                        </div>
                                    }
                                </div>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div>
</div>


@*Import Sidebar Right*@
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")