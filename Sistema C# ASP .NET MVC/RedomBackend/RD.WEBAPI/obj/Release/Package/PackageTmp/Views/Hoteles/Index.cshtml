@model IEnumerable<RD.Data.Models.Hotel>

@{
    ViewBag.Title = "Hoteles";
}

<div class="wrapper">

    @Html.Partial("~/Views/Shared/_Header.cshtml")

    @Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
    <div class="wrapper">
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Sistema de gestión
                    <small>Hoteles</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-newspaper-o"></i> Home</a></li>
                    <li><a href="#">Hoteles</a></li>
                </ol>
            </section>
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Precios de hoteles</h3>
                                <hr />
                            </div><!-- /.box-header -->
                            <div class="box-body">

                                <p>
                                    @Html.ActionLink("Crear Nuevo", "Create")
                                </p>
                                <table class="datatableUI table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Nombre)
                                            </th>
                                            
                                            
                                            
                                            
                                            <th class="hidden">
                                                @Html.DisplayNameFor(model => model.NinioGratis)
                                            </th>
                                            <th>
                                                Válido desde
                                            </th>
                                            <th>
                                                Válido hasta
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Nombre)
                                                </td>

                                                <td class="hidden">
                                                    @Html.DisplayFor(modelItem => item.NinioGratis)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ValidoDesde)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ValidoHasta)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Editar", "Edit", new { id = item.HotelID }) |
                                                    @Html.ActionLink("Detalles", "Details", new { id = item.HotelID }) |
                                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.HotelID })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div><!-- /.col -->
                </div><!-- /.row -->

            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div>
</div>


@*Import Sidebar Right*@
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")