@model IEnumerable<RD.Data.Models.Afiliado>

@{
    ViewBag.Title = "Afiliados";
}

<div class="wrapper">

    @Html.Partial("~/Views/Shared/_Header.cshtml")

    @*Import Sidebar Left*@
    @Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
    <div class="wrapper">
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Sistema de gestión
                    <small>Afiliados</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-newspaper-o"></i> Home</a></li>
                    <li><a href="#">Afiliados</a></li>
                </ol>
            </section>
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Afiliados Registrados</h3>
                                <hr />
                            </div><!-- /.box-header -->
                            <div class="box-body">

                                <p>
                                    @Html.ActionLink("Crear Nuevo", "Create")
                                </p>
                                <table id="tableIDA"class="datatableUI table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                ID Afiliado
                                            </th>
                                            <th>
                                                Cédula
                                            </th>
                                            <th>
                                                Nombre
                                            </th>
                                            <th>
                                                Razón Social
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.RNC)
                                            </th>
                                            
                                            <th>
                                                Estatus
                                            </th>

                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                       
                                    </tbody>
                                </table>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div>
</div>


@*Import Sidebar Right*@
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
<script>
    $(document).ready(function () {
        
        $('#tableIDA').DataTable().destroy();
        $('#tableIDA').DataTable({
            "bProcessing": true,
            "bServerSide": true,
            "sAjaxSource": "Afiliados/GetAllAfiAsy",
            "aoColumns": [
                            {
                                "sName": "AfiliadoIndice",
                                "bSearchable": true,
                                "pagingType": "full_numbers",
                                "pagingType": "scrolling",
                                "bSortable": false,
                                "fnRender": function (oObj) {
                                    return '<a href=\"Details/' +
                                    oObj.aData[0] + '\">View</a>';
                                }
                            },
                            {
                                "sName": "Cedula",
                                "bSortable": false
                            },
                            {
                                "sName": "Nombre",
                                "bSortable": false
                            },
                            {
                                "sName": "Razon Social",
                                "bSortable": false
                            },
                            {
                                "sName": "RNC",
                                "bSortable": false
                            },
                            {
                                "sName": "Status",
                                "bSortable": false
                            },
                            {
                                "sName": "Actions",
                                "bSortable": false
                            }
            ]
        });
     });
</script>