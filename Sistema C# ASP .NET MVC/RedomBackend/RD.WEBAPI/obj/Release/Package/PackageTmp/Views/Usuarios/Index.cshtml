@model IEnumerable<RD.Data.Models.Login>

@{
    ViewBag.Title = "Index";
}

<div class="wrapper">

    @Html.Partial("~/Views/Shared/_Header.cshtml")

    @Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
    <div class="wrapper">
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Sistema de gestión
                    <small>Usuarios</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-newspaper-o"></i> Home</a></li>
                    <li><a href="#">Usuarios</a></li>
                </ol>
            </section>
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Registro de acceso de usuarios al sistema</h3>
                                <hr />
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <p>
                                    @Html.ActionLink("Create New", "Create")
                                </p>
                                <table class="table">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Empleado.Nombres)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.UserName)
                                        </th>

                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (item.Empleado == null)
                                                {
                                                    @Html.Label("Administrador del sistema")
                                                }
                                                else
                                                {
                                                    @Html.DisplayFor(modelItem => item.Empleado.Nombres)
                                                }
                                                
                                            </td>



                                            <td>
                                                @Html.DisplayFor(modelItem => item.UserName)
                                            </td>

                                            <td>
                                                @Html.ActionLink(" Editar ", "Edit", new { id = item.LoginID }) |
                                                
                                                @if (item.UserName != "admin")
                                                {

                                                    @Html.ActionLink(" Permisos ", "Edit", "UserPermissions", new { id = item.Empleado.EmpleadoID }, null)
                                                    
                                                    @Html.Raw(" | ")
                                                   
                                                    @Html.ActionLink(" Eliminar ", "Delete", new { id = item.LoginID })
                                                }



                                            </td>

                                        </tr>
                                    }

                                </table>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div><!-- /.col -->
                </div><!-- /.row -->

            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div>
</div>


@*Import Sidebar Right*@
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")