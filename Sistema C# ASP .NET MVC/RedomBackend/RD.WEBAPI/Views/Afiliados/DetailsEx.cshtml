@model RD.Data.Models.Afiliado

@{
    ViewBag.Title = "DetailsEx";
}
<div class="wrapper">

    @Html.Partial("~/Views/Shared/_Header.cshtml")

    @Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
    <div class="wrapper">
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Sistema de gestión
                    <small>Afiliados</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-newspaper-o"></i> Home</a></li>
                    <li><a href="#">Afiliados</a></li>
                </ol>
            </section>
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Datos de Afiliado</h3>
                                <hr />
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <h2>DetailsEx</h2>

                                <div>
                                    <h4>Afiliado</h4>
                                    <hr />
                                    <dl class="dl-horizontal">
                                        <dt>
                                            ID
                                        </dt>

                                        <dd>
                                            @{var b = Model.AfiliadoIndice.ToString();
                                              while (b.Length < 8)
                                              {
                                                  b = "0" + b;
                                              }
                                              if (b.Length > 4)
                                            {
                                                @Html.Raw("7777-2552-" + b.Substring(0, 4) + "-" + b.Substring(4, 4))
                                            }
                                            

                                            }
                                        </dd>



                                        <dt>
                                            @Html.DisplayNameFor(model => model.Cedula)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Cedula)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Pasaporte)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Pasaporte)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Nombres)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Nombres)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Apellido1)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Apellido1)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Apellido2)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Apellido2)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.RazonSocial)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.RazonSocial)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.RNC)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.RNC)
                                        </dd>
                                        @{
                                            if (Model.Emails != null)
                                            {
                for (var l = 0; l < Model.Emails.Count; l++ )
                {
                    <dt>
                        Email @Html.Raw(l + 1)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Emails[l].Email)
                    </dd>
                }
            }

            if (Model.Tarjetas!= null)
            {
                for (var i = 0; i < Model.Tarjetas.Count; i++)
                {
                    <dt>
                        Tarjeta @Html.Raw(i + 1)
                    </dt>

                    <dd>                                      
                       
                        <a target="_blank" href="/Afiliados/TarjetasDetails/?idtarjeta=@Html.DisplayFor(model => model.Tarjetas[i].TarjetaUsuarioID)">@Html.DisplayFor(model => model.Tarjetas[i].NumeroTarjeta)</a> @Html.DisplayFor(model => model.Tarjetas[i].Banco)
                    </dd>
                }
            }

            if (Model.Direcciones != null)
            {
                for (var j = 0; j < Model.Direcciones.Count; j++)
                {
                    <dt>
                        Dirección @Html.Raw(j + 1)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Direcciones[j].Descripcion)
                    </dd>
                }
            }

            if (Model.Telefonos != null)
            {
                for (var k = 0; k < Model.Telefonos.Count; k++)
                                                {
                                                    <dt>
                        Teléfono @Html.Raw(k + 1)
                                                    </dt>

                                                    <dd>
                        @Html.DisplayFor(model => model.Telefonos[k].Tipo ) | @Html.DisplayFor(model => model.Telefonos[k].Descripcion) Ext = [ @Html.DisplayFor(model => model.Telefonos[k].Extension) ]
                                                    </dd>
                                                }
                                            }

                                        }


                                        <dt>
                                            Cumpleaños
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Cumpleanio)
                                        </dd>

                                        <dt>
                                            Meses adicionales
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.MesAdicionalCan)
                                        </dd>

                                        <dt>
                                            Tarjetas adicionales
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.TarjetaAdicionalCan)
                                        </dd>

                                        <dt>
                                            Vencimiento de Memb.
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.FechaVencimiento)
                                        </dd>

                                        <dt>
                                            Fecha de registro
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.FechaHora)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Observaciones)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Observaciones)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Status)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Status)
                                        </dd>

                                        <dt>
                                            Membresía
                                        </dt>

                                        <dd>
                                            $ @Html.DisplayFor(model => model.CostoMembresia)
                                        </dd>



                                    </dl>



                                </div>
                                <p>
                                    @Html.ActionLink("Editar", "Edit", new { id = Model.AfiliadoID }) |
                                    @Html.ActionLink("Volver al listado", "Index") |
                                    <a id="dwReport" target="_blank" class="" href='@Url.Action("Afiliacion", "Report", new { id = Model.AfiliadoID})'>Generar Report</a>
                                    
                                </p>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div><!-- /.col -->
                </div><!-- /.row -->

            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div>
</div>
@*Import Sidebar Right*@
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
