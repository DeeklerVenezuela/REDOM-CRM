@model RD.Data.Models.Reserva

@{
    ViewBag.Title = "Reservas";
    
}

<div class="wrapper">

    @Html.Partial("~/Views/Shared/_Header.cshtml")

    @Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
    <div class="wrapper">
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Sistema de gestión
                    <small>Reservas</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-newspaper-o"></i> Home</a></li>
                    <li><a href="#">Reservas</a></li>
                </ol>
            </section>
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Reservas de hoteles</h3>
                                <hr />
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <div>
                                    <h4>Reserva</h4>
                                    <hr />
                                    <dl class="dl-horizontal">
                                        <dt>
                                            @Html.DisplayNameFor(model => model.FechaHora)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.FechaHora)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Costo)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Costo)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Status)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Status)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.CantidadAdultos)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.CantidadAdultos)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.CantidadNinios)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.CantidadNinios)
                                        </dd>
                                        <dt><b>Tipo de habitacion</b></dt>
                                        <dd><b>Cantidad</b></dd>
                                            @{
                                                if (Model.Habitaciones != null)
                                                {
                                                    foreach (var i in Model.Habitaciones)
                                                    {
                                                        <dt>@Html.Label(i.Tipo)</dt>
                                                        <dd>@Html.Label(i.Cantidad)</dd>
                                                    }
                                                }
                                            }
                                        </dd>
                                    </dl>
                                </div>
                                <p>
                                    @Html.ActionLink("Edit", "Edit", new { id = Model.ReservaID }) |
                                    @Html.ActionLink("Back to List", "Index")
                                </p>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div>
</div>


@*Import Sidebar Right*@
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")