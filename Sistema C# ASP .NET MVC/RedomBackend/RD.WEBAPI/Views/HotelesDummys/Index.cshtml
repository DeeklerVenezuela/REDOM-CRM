@model IEnumerable<RD.Data.Models.HotelDummy>

    @{
        ViewBag.Title = "Hoteles";
    }

    <div class="wrapper">

        @Html.Partial("~/Views/Shared/_Header.cshtml")

        @*Import Sidebar Left*@
        @Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
        <div class="wrapper">
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <h1>
                        Sistema de gestión
                        <small>Dummy</small>
                    </h1>
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-newspaper-o"></i> Home</a></li>
                        <li><a href="#">Dummy</a></li>
                    </ol>
                </section>
                <section class="content">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="box">
                                <div class="box-header">
                                    <h3 class="box-title">Seleccionar prospecto al sistema</h3>
                                    <hr />
                                </div><!-- /.box-header -->
                                <div class="box-body">


                                    <p>
                                        @Html.ActionLink("Crear Nuevo", "Create")
                                    </p>
                                    <table class="table">
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Ubicacion)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Color)
                                            </th>
                                            <th></th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Ubicacion)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Color)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Editar", "Edit", new { id = item.HotelesDummyID }) |
                                                    @Html.ActionLink("Detalles", "Details", new { id = item.HotelesDummyID }) |
                                                    @Html.ActionLink("Borrar", "Delete", new { id = item.HotelesDummyID })
                                                </td>
                                            </tr>
                                        }

                                    </table>
                                </div><!-- /.box-body -->
                            </div><!-- /.box -->
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </section><!-- /.content -->
            </div><!-- /.content-wrapper -->
        </div>
    </div>


    @*Import Sidebar Right*@
    @Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
